{
  "name": "@dapplets/dapplet-extension",
  "version": "0.51.0-alpha.5",
  "description": "The Bridge to the Augmented Web.",
  "main": "./lib/index.min.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build:extension": "webpack --config webpack.prod.js",
    "build:jslib": "webpack --config webpack.jslib.js && tsc -d --emitDeclarationOnly",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=6144 npm run build:extension && npm run build:jslib",
    "dev": "webpack --config webpack.dev.js",
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=6144 webpack -w --config webpack.dev.js",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "clean": "rm -rf ./build && rm -rf ./lib",
    "lint": "npm run prettify && npm run stylelint && npm run eslint",
    "prettify": "prettier --write src",
    "eslint": "eslint ./src --ext .ts --fix",
    "stylelint": "stylelint ./src/**/*.{css,scss,module.scss} --fix"
  },
  "devDependencies": {
    "@fontsource/montserrat": "^4.5.5",
    "@fontsource/roboto": "^4.5.3",
    "@metamask/providers": "^8.1.1",
    "@rjsf/core": "^4.2.0",
    "@rjsf/semantic-ui": "^3.2.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@sentry/browser": "^6.17.9",
    "@sentry/tracing": "^6.17.9",
    "@svgr/webpack": "^6.2.1",
    "@types/lodash": "^4.14.182",
    "@types/qr-image": "^3.2.5",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@walletconnect/client": "^1.7.1",
    "assert-browserify": "^2.0.0",
    "buffer": "^6.0.3",
    "chrome-extension-message-wrapper": "github:dapplets/chrome-extension-message-wrapper",
    "classnames": "^2.3.1",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.6.0",
    "detect-browser": "^5.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "ethereum-blockies-base64": "^1.0.2",
    "extension-port-stream": "^2.0.1",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "javascript-time-ago": "^2.3.13",
    "jszip": "^3.7.1",
    "node-sass": "^7.0.1",
    "normalize.css": "^8.0.1",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "process": "^0.11.10",
    "qr-image": "^3.2.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-linkify": "1.0.0-alpha",
    "react-router-dom": "^6.2.1",
    "react-secure-link": "^3.0.3",
    "react-time-ago": "^7.1.9",
    "resolve-url-loader": "^5.0.0",
    "rxjs": "^6.6.7",
    "rxjs-proxify": "^0.1.1",
    "sass": "^1.49.7",
    "sass-loader": "^12.6.0",
    "semantic-release": "^19.0.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.1",
    "semver": "^7.3.5",
    "simple-mapper": "^2.2.0",
    "skynet-js": "^4.0.25-beta",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.3",
    "stylelint": "^14.8.5",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-order-config-standard": "^0.1.3",
    "stylelint-scss": "^4.2.0",
    "topological-sort": "^0.3.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "url-loader": "^4.1.1",
    "webextension-polyfill-ts": "^0.25.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/react-jsonschema-form": "^1.7.8",
    "animejs": "^3.2.1",
    "copy-to-clipboard": "^3.3.1",
    "ethers": "^5.5.4",
    "near-api-js": "^0.39.0",
    "react-animejs": "^0.5.6",
    "react-select": "^5.3.2"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/dapplet-extension.git"
  },
  "keywords": [
    "dapplets",
    "extension",
    "ethereum"
  ],
  "author": "Dapplets Team <contact@dapplets.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/dapplet-extension/issues"
  },
  "homepage": "https://github.com/dapplets/dapplet-extension#readme",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "develop",
        "prerelease": "alpha"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run build:extension && cd build && zip -r dapplet-extension.zip *"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dapplet-extension.zip",
              "label": "Browser Extension (zip)"
            },
            {
              "path": "lib/index.min.js",
              "label": "Pure JSLib for browser (js)"
            }
          ]
        }
      ]
    ]
  }
}
